# Production Environment Variables Template
# Copy this file to .env.prod and fill in your actual values

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-strong-mongodb-password
DB_NAME=pego_database

# JWT and Security Keys (CHANGE THESE!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ADMIN_SECRET_KEY=your-super-secret-admin-key-change-this-in-production
SESSION_SECRET_KEY=your-super-secret-session-key-change-this-in-production

# Payment Integration
STRIPE_API_KEY=sk_live_your-stripe-secret-key
PROMPTPAY_ID=your-promptpay-phone-or-id

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
